= form_for @post do |f|
  - if @post.errors.any?
    #errors
      %h2
        = "#{pluralize(@post.errors.count, "error")} prevented this post from saving"
          %ul
            - @post.errors.full_messages.each do |msg|
            %li
              = msg
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :body
    = f.text_area :body
  %p
    = f.submit "Share Post"